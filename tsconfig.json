{
    "compilerOptions": {
        "target": "ES2022",
        "strict": true,
        "keyofStringsOnly": true,
        "allowSyntheticDefaultImports": true,
        "types": [],
        "declaration": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@commercetools/sdk/*": [
                "../../core/lib/*"
            ],
            "@commercetools/sdk": [
                "../../core/lib"
            ],
            "@commercetools/domain-types/*": [
                "src/domain-types/src/*"
            ],
            "@commercetools/domain-types": [
                "src/domain-types/src"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "lib"
    ]
}
